<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/myRecipeActivity"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    tools:context="cl.ramces.myrecipelist.views.main.MyRecipeActivity">

    <EditText
        android:hint="Nombre de la receta"
        android:id="@+id/RecipeNameEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <EditText
        android:hint="Dificultad"
        android:id="@+id/RecipeDificultEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RecipeNameEt"/>

    <EditText
        android:layout_below="@+id/RecipeDificultEt"
        android:hint="Escriba una descripcion de la receta"
        android:id="@+id/DescriptionEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_border_primary_ligth"
        android:lines="10"
        android:padding="8dp"/>
    <EditText
        android:hint="Duracion"
        android:id="@+id/DurationET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DescriptionEt"/>
    <Button
        android:hint="GUARDAR"
        android:id="@+id/SaveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DurationET"
        android:layout_alignParentRight="true"/>

</RelativeLayout>